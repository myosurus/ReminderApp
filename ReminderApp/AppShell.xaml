<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReminderApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReminderApp"
    Shell.FlyoutBehavior="Disabled"
    Title="ReminderApp">

	<TabBar>
		<ShellContent
            Title="Reminders"
			Route="Reminders" 
            ContentTemplate="{DataTemplate local:ReminderListPage}" />

		<ShellContent
            Title="Add"
			Route="Add" 
            ContentTemplate="{DataTemplate local:ReminderDetailPage}" />
	</TabBar>

</Shell>
